<div class="container">
  <h1>My Tasks</h1>
  <% @tasks.each do |task| %>
    <div class="form-check">
      <% if task.completed %>
        <input class="form-check-input" type="checkbox" checked >
      <% else %>
        <input class="form-check-input" type="checkbox" >
      <% end %>
      <label class="form-check-label">
        <%= link_to task.title, task_path(task) %>
        <%= link_to '', task_path(task), method: :delete, data: { confirm: "Confirm deleteing #{task.title}?" }, class: 'far fa-trash-alt' %>
      </label>
    </div>
  <% end %>
 <%= link_to 'âž•Add a new task', new_task_path, class: 'btn btn-success' %>
</div>
